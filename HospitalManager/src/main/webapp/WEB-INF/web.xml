<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>dungdan</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.dungdan</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorRegisterController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.DoctorRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeRegisterController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.EmployeeRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientRegisterController</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.PatientRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPatient</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.ListPatient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailPatient</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.DetailPatient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPatient</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.AddPatient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePatient</servlet-name>
        <servlet-class>com.swd.hospitalmanager.controllers.DeletePatient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dungdan</servlet-name>
        <url-pattern>/dungdan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorRegisterController</servlet-name>
        <url-pattern>/DoctorRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeRegisterController</servlet-name>
        <url-pattern>/EmployeeRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientRegisterController</servlet-name>
        <url-pattern>/PatientRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPatient</servlet-name>
        <url-pattern>/listpatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailPatient</servlet-name>
        <url-pattern>/detailpatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPatient</servlet-name>
        <url-pattern>/addpatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePatient</servlet-name>
        <url-pattern>/deletepatient</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
