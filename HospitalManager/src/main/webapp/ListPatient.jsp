                                        </tr>
                                    </thead>
                                    <tbody>
                                    <c:forEach var="patient" items="${listPatient}">
            <tr>
                <td>${patient.id}</td>
                <td>${patient.fullname}</td>
                <!-- Format date using fmt:formatDate -->
                <td>${patient.dob}</td>
                <td>${patient.gender ? "Male" : "Female"}</td>
                <td>${patient.address}</td>
                <td>${patient.phonenumber}</td>
                <!-- Add other patient properties as needed -->
                <td>
                     <a href="detailpatient?id=${patient.id}" class="btn btn-primary btn-sm edit" title="Edit">
        <i class="fa fa-edit"></i>
    </a>

 <a href="javascript:void(0);" onclick="confirmDelete(${patient.id})" class="btn btn-primary btn-sm edit" title="Delete">
    <i class="fa fa-trash"></i>
</a>

                </td>
            </tr>
        </c:forEach>
                                    </tbody>
                                </table>
                   
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <script>
